<% layout('layouts/boilerplate')%>

<div class="container mt-3">
    <h1 class="mb-4">Your Brainstorms, <%= currentUser.username %></h1>

    <% if (brainstorms && brainstorms.length > 0) { %>
        <% brainstorms.forEach((brainstorm, brainstormIndex) => { %>
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Problem <%= brainstormIndex + 1 %>: <%= brainstorm.problem ? brainstorm.problem.title : 'Untitled Problem' %>
                    </h2>
                    <% if (brainstorm.problem && brainstorm.problem._id) { %>
                        <a href="/ideation/<%= brainstorm.problem._id %>" class="btn btn-sm btn-light mt-2">
                            <i class="fas fa-edit me-1"></i> Edit Brainstorm
                        </a>
                    <% } %>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="text-muted">Problem Statement:</h5>
                        <p><%= brainstorm.problemStatement ? brainstorm.problemStatement.content : (brainstorm.problem ? brainstorm.problem.description : 'No problem statement') %></p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">
                                <i class="fas fa-lightbulb text-warning me-2"></i>
                                Ideas (<%= brainstorm.ideas ? brainstorm.ideas.filter(i => i.content && i.content.trim() !== '').length : 0 %>)
                            </h5>
                            <% if (brainstorm.ideas && brainstorm.ideas.length > 0) { %>
                                <ul class="list-group list-group-flush">
                                    <% brainstorm.ideas.filter(idea => idea.content && idea.content.trim() !== '').forEach((idea, index) => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="badge bg-success me-2"><%= index + 1 %></span>
                                                <%= idea.content %>
                                            </div>
                                            <button class="btn btn-outline-danger btn-sm delete-idea" data-id="<%= idea._id %>">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else { %>
                                <p class="text-muted">No ideas for this problem yet.</p>
                            <% } %>
                        </div>

                        <div class="col-md-6">
                            <h5 class="mb-3">
                                <i class="fas fa-box text-info me-2"></i>
                                Frames (<%= brainstorm.frames ? brainstorm.frames.filter(f => f.content && f.content.trim() !== '').length : 0 %>)
                            </h5>
                            <% if (brainstorm.frames && brainstorm.frames.length > 0) { %>
                                <ul class="list-group list-group-flush">
                                    <% brainstorm.frames.filter(frame => frame.content && frame.content.trim() !== '').forEach((frame, index) => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="badge bg-info me-2"><%= index + 1 %></span>
                                                <%= frame.content %>
                                            </div>
                                            <button class="btn btn-outline-danger btn-sm delete-frame" data-id="<%= frame._id %>">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else { %>
                                <p class="text-muted">No frames for this problem yet.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="alert alert-info">
            <h4>No Brainstorms Yet</h4>
            <p>You haven't created any brainstorms yet. Start by creating a problem statement and then add ideas and frames!</p>
            <a href="/dashboard" class="btn btn-primary">
                <i class="fas fa-arrow-left me-1"></i> Go to Dashboard
            </a>
        </div>
    <% } %>

    <div class="text-center mb-4 mt-4">
        <a href="/dashboard" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <% if (brainstorms && brainstorms.length > 0 && brainstorms[0].problem && brainstorms[0].problem._id) { %>
            <a href="/ideation/<%= brainstorms[0].problem._id %>" class="btn btn-primary me-2">
                <i class="fas fa-lightbulb"></i> Back to Ideation Tool
            </a>
        <% } else { %>
            <a href="/ideation" class="btn btn-primary me-2">
                <i class="fas fa-lightbulb"></i> Back to Ideation Tool
            </a>
        <% } %>
        <% if (brainstorms && brainstorms.length === 1) { %>
            <a href="/ideation/my-brainstorms" class="btn btn-info text-white me-2">
                <i class="fas fa-list"></i> View All Brainstorms
            </a>
        <% } %>
        <a href="/define-solution" class="btn btn-success">
            <i class="fas fa-check-circle"></i> Define the Solution
        </a>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Delete idea
    document.querySelectorAll('.delete-idea').forEach(button => {
        button.addEventListener('click', async function() {
            if (confirm('Are you sure you want to delete this idea?')) {
                const id = this.dataset.id;
                try {
                    const response = await fetch(`/api/ideas/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete idea');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to delete idea');
                }
            }
        });
    });

    // Delete frame
    document.querySelectorAll('.delete-frame').forEach(button => {
        button.addEventListener('click', async function() {
            if (confirm('Are you sure you want to delete this frame?')) {
                const id = this.dataset.id;
                try {
                    const response = await fetch(`/api/frames/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete frame');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to delete frame');
                }
            }
        });
    });
});
</script>
