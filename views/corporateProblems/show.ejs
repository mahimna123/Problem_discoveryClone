<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="text-white mb-0"><%= corporateProblem.title %></h2>
            <% if (currentUser && (currentUser.isProblemCreator || currentUser.isAdmin) && corporateProblem.createdBy._id.toString() === currentUser._id.toString()) { %>
            <div class="d-flex gap-2">
                <a href="/corporate-problems/<%= corporateProblem._id %>/edit" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form action="/corporate-problems/<%= corporateProblem._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this problem?')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
            <% } %>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <div class="mb-3">
                    <span class="badge bg-info text-dark" style="font-size: 1rem; padding: 8px 16px;">
                        <i class="fas fa-building"></i> Company: <strong><%= corporateProblem.companyName %></strong>
                    </span>
                </div>
                <h4 class="text-white">Description</h4>
                <p class="text-muted"><%= corporateProblem.description %></p>
            </div>

            <% if (corporateProblem.problemStatement && (corporateProblem.problemStatement.whoHasProblem || corporateProblem.problemStatement.whatIsProblem || corporateProblem.problemStatement.expectedBenefit)) { %>
            <div class="mb-4">
                <h4 class="text-white">Problem Statement Details</h4>
                <% if (corporateProblem.problemStatement.whoHasProblem) { %>
                <div class="mb-3">
                    <strong class="text-white">Who has the problem:</strong>
                    <p class="text-muted"><%= corporateProblem.problemStatement.whoHasProblem %></p>
                </div>
                <% } %>
                <% if (corporateProblem.problemStatement.whatIsProblem) { %>
                <div class="mb-3">
                    <strong class="text-white">What is the problem:</strong>
                    <p class="text-muted"><%= corporateProblem.problemStatement.whatIsProblem %></p>
                </div>
                <% } %>
                <% if (corporateProblem.problemStatement.expectedBenefit) { %>
                <div class="mb-3">
                    <strong class="text-white">Expected benefit:</strong>
                    <p class="text-muted"><%= corporateProblem.problemStatement.expectedBenefit %></p>
                </div>
                <% } %>
            </div>
            <% } %>

            <div class="mb-4">
                <small class="text-muted">
                    <i class="fas fa-user"></i> Created by <strong><%= corporateProblem.createdBy.username %></strong>
                    <span class="ms-3"><i class="fas fa-calendar"></i> <%= new Date(corporateProblem.createdAt).toLocaleDateString() %></span>
                </small>
            </div>

            <div class="d-flex gap-2 mt-4">
                <form action="/corporate-problems/<%= corporateProblem._id %>/adopt" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-rocket"></i> Adopt This Problem & Start Innovation Process
                    </button>
                </form>
                <a href="/corporate-problems" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

