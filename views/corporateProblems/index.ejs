<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white mb-2">Corporate Problem Statements</h1>
            <p class="text-muted">Browse and adopt corporate problem statements to start your innovation journey</p>
        </div>
        <% if (currentUser && (currentUser.isProblemCreator || currentUser.isAdmin)) { %>
        <a href="/corporate-problems/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Problem
        </a>
        <% } %>
    </div>

    <% if (corporateProblems.length === 0) { %>
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h3 class="text-white">No Corporate Problems Yet</h3>
                <p class="text-muted">Check back later or contact an administrator to create problem statements.</p>
                <% if (currentUser && (currentUser.isProblemCreator || currentUser.isAdmin)) { %>
                <a href="/corporate-problems/new" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Create First Problem
                </a>
                <% } %>
            </div>
        </div>
    <% } else { %>
        <div class="row">
            <% corporateProblems.forEach(problem => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <span class="badge bg-info text-dark mb-2">
                                <i class="fas fa-building"></i> <%= problem.companyName %>
                            </span>
                        </div>
                        <h5 class="card-title text-white"><%= problem.title %></h5>
                        <p class="card-text text-muted flex-grow-1">
                            <%= problem.description.length > 150 ? problem.description.substring(0, 150) + '...' : problem.description %>
                        </p>
                        <div class="mt-auto">
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> Created by <%= problem.createdBy.username %>
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> <%= new Date(problem.createdAt).toLocaleDateString() %>
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="/corporate-problems/<%= problem._id %>" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <form action="/corporate-problems/<%= problem._id %>/adopt" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-rocket"></i> Adopt
                                    </button>
                                </form>
                            </div>
                            <% if (currentUser && (currentUser.isProblemCreator || currentUser.isAdmin) && problem.createdBy._id.toString() === currentUser._id.toString()) { %>
                            <div class="mt-2 d-flex gap-2">
                                <a href="/corporate-problems/<%= problem._id %>/edit" class="btn btn-outline-warning btn-sm flex-grow-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="/corporate-problems/<%= problem._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this problem?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    <% } %>
</div>

