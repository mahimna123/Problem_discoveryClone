<% layout('layouts/boilerplate')%>
<div class="container-fluid mt-4">
    <!-- Title -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-0">ABPS Dashboard</h1>
        </div>
    </div>

    <!-- Schools Grid -->
    <div class="row mb-4">
        <% if (schools.length === 0) { %>
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <h5>No schools found enrolled in <%= program.name %></h5>
                    <p>Please enroll schools through the <a href="/admin/dashboard">Admin Dashboard</a>.</p>
                </div>
            </div>
        <% } else { %>
            <% schools.forEach(school => { %>
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="school-card h-100" data-level="<%= school.level %>">
                        <div class="school-card-content">
                            <h3 class="school-name"><%= school.schoolName %></h3>
                            <div class="school-level">
                                <% if (school.level === 1) { %>
                                    <span class="level-badge">Level 1</span>
                                <% } else if (school.level === 2) { %>
                                    <span class="level-badge">Level 2</span>
                                <% } else if (school.level === 3) { %>
                                    <span class="level-badge">Level 3</span>
                                <% } else { %>
                                    <span class="level-badge">No Level</span>
                                <% } %>
                            </div>
                            <button class="btn see-why-btn" onclick="showSchoolDetails('<%= school.schoolId %>', '<%= school.schoolName %>', <%= school.problemCount %>, <%= school.ideationCount %>, <%= school.solutionCount %>, <%= school.level %>)">
                                See Why?
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <!-- School Details Section (Hidden by default, shown when "See Why?" is clicked) -->
    <div class="row mb-4" id="schoolDetailsSection" style="display: none;">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 id="selectedSchoolName" class="mb-3"></h3>
                    <div id="schoolDetailsContent"></div>
                    <button class="btn btn-secondary mt-3" onclick="hideSchoolDetails()">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .school-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .school-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .school-card-content {
        padding: 24px 20px;
        min-height: 180px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
    }

    /* Level 1 - Reddish Shade */
    .school-card[data-level="1"] .school-card-content {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

    /* Level 2 - Orangish Yellow */
    .school-card[data-level="2"] .school-card-content {
        background: linear-gradient(135deg, #ffa500 0%, #ffd700 100%);
        color: white;
    }

    /* Level 3 - Greenish Yellow */
    .school-card[data-level="3"] .school-card-content {
        background: linear-gradient(135deg, #90ee90 0%, #adff2f 100%);
        color: white;
    }

    /* No Level - Gray */
    .school-card[data-level="0"] .school-card-content {
        background: linear-gradient(135deg, #868e96 0%, #495057 100%);
        color: white;
    }

    .school-name {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 12px;
        line-height: 1.3;
        color: white;
    }

    .school-level {
        margin-bottom: 16px;
    }

    .level-badge {
        display: inline-block;
        padding: 6px 16px;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .see-why-btn {
        width: 100%;
        padding: 10px 20px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 8px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: auto;
    }

    .see-why-btn:hover {
        background: rgba(0, 0, 0, 0.5);
        border-color: rgba(255, 255, 255, 0.8);
        color: white;
        transform: scale(1.02);
    }

    .see-why-btn:active {
        transform: scale(0.98);
    }

    #schoolDetailsSection {
        animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .detail-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        border-left: 4px solid;
    }

    .detail-card.problems {
        border-left-color: #6c757d;
    }

    .detail-card.ideation {
        border-left-color: #17a2b8;
    }

    .detail-card.solutions {
        border-left-color: #007bff;
    }

    .detail-card h5 {
        margin-bottom: 10px;
        color: #495057;
    }

    .detail-card .number {
        font-size: 2rem;
        font-weight: 700;
        color: #212529;
    }

    .level-criteria {
        margin-top: 20px;
        padding: 15px;
        background: #e9ecef;
        border-radius: 8px;
    }

    .level-criteria h6 {
        margin-bottom: 10px;
        font-weight: 600;
    }

    .level-criteria ul {
        margin-bottom: 0;
        padding-left: 20px;
    }
</style>

<script>
    function showSchoolDetails(schoolId, schoolName, problemCount, ideationCount, solutionCount, level) {
        const section = document.getElementById('schoolDetailsSection');
        const nameElement = document.getElementById('selectedSchoolName');
        const contentElement = document.getElementById('schoolDetailsContent');
        
        nameElement.textContent = schoolName;
        
        let levelText = '';
        let levelColor = '';
        let criteria = '';
        
        if (level === 1) {
            levelText = 'Level 1';
            levelColor = '#dc3545';
            criteria = `
                <ul>
                    <li>Less than 5 Problem statements (0-4)</li>
                    <li>Or does not meet Level 2 or Level 3 criteria</li>
                </ul>
            `;
        } else if (level === 2) {
            levelText = 'Level 2';
            levelColor = '#ffa500';
            criteria = `
                <ul>
                    <li>More than 10 Problem statements</li>
                    <li>More than 5 ideations</li>
                    <li>More than 3 conceptual solutions</li>
                </ul>
            `;
        } else if (level === 3) {
            levelText = 'Level 3';
            levelColor = '#90ee90';
            criteria = `
                <ul>
                    <li>More than 25 Problem statements</li>
                    <li>More than 15 ideations</li>
                    <li>More than 10 solutions</li>
                </ul>
            `;
        } else {
            levelText = 'No Level';
            levelColor = '#868e96';
            criteria = '<p>This school does not meet the criteria for any level yet.</p>';
        }
        
        contentElement.innerHTML = `
            <div class="details-grid">
                <div class="detail-card problems">
                    <h5>Problem Statements</h5>
                    <div class="number">${problemCount}</div>
                </div>
                <div class="detail-card ideation">
                    <h5>Ideation Done</h5>
                    <div class="number">${ideationCount}</div>
                </div>
                <div class="detail-card solutions">
                    <h5>Solutions Registered</h5>
                    <div class="number">${solutionCount}</div>
                </div>
            </div>
            <div class="level-criteria">
                <h6 style="color: ${levelColor};">${levelText} Criteria:</h6>
                ${criteria}
            </div>
        `;
        
        section.style.display = 'block';
        section.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
    
    function hideSchoolDetails() {
        document.getElementById('schoolDetailsSection').style.display = 'none';
    }
</script>

