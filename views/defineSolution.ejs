<% layout('layouts/boilerplate')%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Define Your Solution in Detail</h1>
            
            <div class="card">
                <div class="card-body">
                    <form id="solutionForm">
                        <div class="mb-3">
                            <label for="solutionTitle" class="form-label">Solution Title</label>
                            <input type="text" class="form-control" id="solutionTitle" placeholder="Enter a title for your solution" value="<%= existingSolution ? (existingSolution.title || '') : '' %>">
                        </div>
                        
                        <div class="mb-3">
                            <label for="solutionShouldDo" class="form-label">What the Solution Should Do</label>
                            <textarea class="form-control" id="solutionShouldDo" rows="4" 
                                placeholder="List the key functionalities and behaviors your solution should have"><%= existingSolution ? (existingSolution.shouldDo || '') : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="solutionShouldNotDo" class="form-label">What the Solution Should Never Do</label>
                            <textarea class="form-control" id="solutionShouldNotDo" rows="4" 
                                placeholder="List the behaviors and functionalities your solution should avoid"><%= existingSolution ? (existingSolution.shouldNotDo || '') : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Key Features Table</label>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="keyFeaturesTable">
                                    <thead>
                                        <tr>
                                            <th>Key Feature</th>
                                            <th>Format</th>
                                            <th>Usage</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (existingSolution && existingSolution.keyFeatures && existingSolution.keyFeatures.length > 0) { %>
                                            <% existingSolution.keyFeatures.forEach(feature => { %>
                                                <tr>
                                                    <td><input type="text" class="form-control" name="feature[]" placeholder="Feature name" value="<%= feature.feature || '' %>"></td>
                                                    <td><input type="text" class="form-control" name="format[]" placeholder="Data format" value="<%= feature.format || '' %>"></td>
                                                    <td><input type="text" class="form-control" name="usage[]" placeholder="How it's used" value="<%= feature.usage || '' %>"></td>
                                                    <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button></td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td><input type="text" class="form-control" name="feature[]" placeholder="Feature name"></td>
                                                <td><input type="text" class="form-control" name="format[]" placeholder="Data format"></td>
                                                <td><input type="text" class="form-control" name="usage[]" placeholder="How it's used"></td>
                                                <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button></td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                                <button type="button" class="btn btn-primary btn-sm" onclick="addRow()">Add Feature</button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="implementationSteps" class="form-label">Implementation Steps</label>
                            <textarea class="form-control" id="implementationSteps" rows="5" 
                                placeholder="Outline the steps to implement your solution"><%= existingSolution ? (existingSolution.implementationSteps || '') : '' %></textarea>
                        </div>

                        <input type="hidden" id="campgroundId" value="<%= campgroundId %>">

                        <div class="d-flex justify-content-between">
                            <a href="/dashboard" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <div>
                                <button type="submit" class="btn btn-success me-2" id="saveSolutionBtn">
                                    <i class="fas fa-save"></i> Save Solution
                                </button>
                                <button type="button" class="btn btn-primary" id="askAISolutionBtn" <%= existingSolution ? '' : 'disabled' %>>
                                    <i class="fas fa-robot"></i> Ask AI Solution
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function addRow() {
    const tbody = document.querySelector('#keyFeaturesTable tbody');
    const newRow = document.createElement('tr');
    newRow.innerHTML = `
        <td><input type="text" class="form-control" name="feature[]" placeholder="Feature name"></td>
        <td><input type="text" class="form-control" name="format[]" placeholder="Data format"></td>
        <td><input type="text" class="form-control" name="usage[]" placeholder="How it's used"></td>
        <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button></td>
    `;
    tbody.appendChild(newRow);
}

function removeRow(button) {
    const tbody = document.querySelector('#keyFeaturesTable tbody');
    if (tbody.children.length > 1) {
        button.closest('tr').remove();
    }
}

function getKeyFeaturesTableData() {
    const rows = document.querySelectorAll('#keyFeaturesTable tbody tr');
    const features = [];
    rows.forEach(row => {
        const inputs = row.querySelectorAll('input');
        if (inputs[0].value.trim() !== '') {
            features.push({
                feature: inputs[0].value.trim(),
                format: inputs[1].value.trim(),
                usage: inputs[2].value.trim()
            });
        }
    });
    return features;
}

const solutionForm = document.getElementById('solutionForm');
const saveSolutionBtn = document.getElementById('saveSolutionBtn');
const askAISolutionBtn = document.getElementById('askAISolutionBtn');

// Save Solution button handler
solutionForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    saveSolutionBtn.disabled = true;
    saveSolutionBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...';
    // Remove any previous error message
    let errorDiv = document.getElementById('solution-error-message');
    if (errorDiv) errorDiv.remove();

    const keyFeatures = getKeyFeaturesTableData();
    const solutionData = {
        title: document.getElementById('solutionTitle').value,
        shouldDo: document.getElementById('solutionShouldDo').value,
        shouldNotDo: document.getElementById('solutionShouldNotDo').value,
        keyFeatures: keyFeatures,
        implementationSteps: document.getElementById('implementationSteps').value,
        campgroundId: document.getElementById('campgroundId').value
    };

    try {
        const response = await fetch('/api/solutions', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(solutionData)
        });

        const data = await response.json();
        if (!response.ok) {
            throw new Error(data.error || 'An error occurred while saving your solution.');
        }
        
        // Redirect to solution details page
        const redirectUrl = `/solution-details?campgroundId=${encodeURIComponent(solutionData.campgroundId)}`;
        window.location.href = redirectUrl;
        
    } catch (error) {
        // Show a user-friendly error message above the form
        errorDiv = document.createElement('div');
        errorDiv.id = 'solution-error-message';
        errorDiv.className = 'alert alert-danger mt-3';
        errorDiv.innerText = error.message || 'An error occurred while saving your solution.';
        solutionForm.parentNode.insertBefore(errorDiv, solutionForm);
    } finally {
        saveSolutionBtn.disabled = false;
        saveSolutionBtn.innerHTML = '<i class="fas fa-save"></i> Save Solution';
    }
});

// Ask AI Solution button handler
askAISolutionBtn.addEventListener('click', async function() {
    const campgroundId = document.getElementById('campgroundId').value;
    if (!campgroundId) {
        alert('Error: Problem ID not found. Please refresh the page.');
        return;
    }
    
    askAISolutionBtn.disabled = true;
    askAISolutionBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Asking AI...';
    
    // Remove any previous messages
    let errorDiv = document.getElementById('solution-error-message');
    if (errorDiv) errorDiv.remove();
    let successDiv = document.getElementById('solution-success-message');
    if (successDiv) successDiv.remove();

    try {
        const response = await fetch('/api/deepseek', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ campgroundId })
        });

        const data = await response.json();
        if (!response.ok) {
            throw new Error(data.error || 'An error occurred while processing your solution with AI.');
        }
        
        // Redirect to solution details page
        const redirectUrl = `/solution-details?campgroundId=${encodeURIComponent(data.campgroundId)}`;
        window.location.href = redirectUrl;
    } catch (error) {
        // Show a user-friendly error message above the form
        errorDiv = document.createElement('div');
        errorDiv.id = 'solution-error-message';
        errorDiv.className = 'alert alert-danger mt-3';
        errorDiv.innerText = error.message || 'An error occurred while processing your solution with AI.';
        solutionForm.parentNode.insertBefore(errorDiv, solutionForm);
        
        askAISolutionBtn.disabled = false;
        askAISolutionBtn.innerHTML = '<i class="fas fa-robot"></i> Ask AI Solution';
    }
});
</script> 