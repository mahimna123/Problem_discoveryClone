<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">My Problem Statements</h1>
            <p class="lead">Welcome back, <%= currentUser.username %>! Here are your problem statements.</p>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Your Problems (<%= campgrounds.length %>)</h3>
                <a href="/problems/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Problem Statement
                </a>
            </div>
        </div>
    </div>

    <% if(campgrounds.length === 0) { %>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-lightbulb fa-4x text-primary mb-4"></i>
                    <h2 class="mb-3">No Problem Statements Yet</h2>
                    <p class="lead mb-4">You haven't created any problem statements yet. Start by adding your first problem and begin your innovation journey!</p>
                    <a href="/problems/new" class="btn btn-primary btn-lg px-5 py-3">
                        <i class="fas fa-plus me-2"></i> Create Your First Problem Statement
                    </a>
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Once you create a problem statement, you can start brainstorming solutions and defining your approach.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row">
            <% campgrounds.forEach(campground => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <% if(campground.images && campground.images.length > 0) { %>
                            <img src="<%= campground.images[0].url %>" class="card-img-top" alt="<%= campground.title %>" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        <% } %>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= campground.title %></h5>
                            
                            <% if(campground.problem) { %>
                                <p class="card-text text-muted">
                                    <strong>Problem:</strong> <%= campground.problem.substring(0, 100) %><%= campground.problem.length > 100 ? '...' : '' %>
                                </p>
                            <% } %>
                            
                            <% if(campground.description) { %>
                                <p class="card-text">
                                    <%= campground.description.substring(0, 150) %><%= campground.description.length > 150 ? '...' : '' %>
                                </p>
                            <% } %>
                            
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt"></i> <%= campground.location %>
                                </small>
                            </p>
                            
                            <!-- Comments/Reviews Section -->
                            <% if (campground.reviews && campground.reviews.length > 0) { %>
                                <div class="mt-3">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-comments"></i> Comments (<%= campground.reviews.length %>)
                                    </h6>
                                    <div class="comments-section" style="max-height: 100px; overflow-y: auto;">
                                        <% campground.reviews.slice(0, 3).forEach(review => { %>
                                            <div class="comment-item mb-2 p-2 bg-light rounded">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <small class="text-muted">
                                                            <i class="fas fa-user"></i> <%= review.author ? review.author.username : 'Anonymous' %>
                                                        </small>
                                                        <p class="mb-1 small"><%= review.body %></p>
                                                        <% if (review.rating) { %>
                                                            <div class="rating">
                                                                <% for (let i = 1; i <= 5; i++) { %>
                                                                    <i class="fas fa-star <%= i <= review.rating ? 'text-warning' : 'text-muted' %>"></i>
                                                                <% } %>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                        <% if (campground.reviews.length > 3) { %>
                                            <small class="text-muted">
                                                <i class="fas fa-ellipsis-h"></i> <%= campground.reviews.length - 3 %> more comments...
                                            </small>
                                        <% } %>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-comments"></i> No comments yet
                                    </small>
                                </div>
                            <% } %>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/problems/<%= campground._id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    <a href="/ideation/<%= campground._id %>" class="btn btn-success btn-sm">
                                        <i class="fas fa-lightbulb"></i> Ideate
                                    </a>
                                </div>
                                
                                <div class="mt-2 d-flex justify-content-between">
                                    <a href="/ideation/<%= campground._id %>" class="btn btn-info btn-sm">
                                        <i class="fas fa-brain"></i> View My Brainstorm
                                    </a>
                                    <a href="/define-solution?campgroundId=<%= campground._id %>" class="btn btn-warning btn-sm">
                                        <i class="fas fa-check-circle"></i> Define Solution
                                    </a>
                                </div>
                                
                                <div class="mt-2">
                                    <a href="/problems/<%= campground._id %>/edit" class="btn btn-outline-secondary btn-sm me-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/problems/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this problem statement?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>

</div>
