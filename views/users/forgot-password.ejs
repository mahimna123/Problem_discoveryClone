<% layout('layouts/boilerplate')%>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7 col-xl-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="card-title text-center mb-2">Forgot Password</h3>
                    <p class="text-muted text-center mb-4">Enter your email and we'll send a secure link to reset your password.</p>

                    <form action="/forgot-password" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email address</label>
                            <input class="form-control form-control-lg" type="email" id="email" name="email" required autofocus placeholder="you@example.com">
                            <div class="form-text">We'll send a reset link if an account exists for this email.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">Send reset link</button>
                            <a href="/login" class="btn btn-outline-secondary">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
