<% layout('layouts/boilerplate')%>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <div class="card shadow">
                <div class="card-img-top d-flex justify-content-center align-items-center bg-dark" style="min-height: 150px; padding: 20px;">
                    <img src="/images/logo-tranparent.png" alt="Erehwon Logo" class="img-fluid" style="max-height: 120px; width: auto; object-fit: contain;">
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <img src="/images/logo-tranparent.png" alt="Erehwon" style="height: 32px; width: auto; margin-right: 8px; vertical-align: middle;">
                        Register
                    </h5>
                    
                    <!-- Google OAuth Button (only show if configured) -->
                    <% if (process.env.GOOGLE_CLIENT_ID) { %>
                    <div class="d-grid mb-3">
                        <a href="/auth/google" class="btn btn-outline-danger">
                            <i class="fab fa-google me-2"></i>Register with Google
                        </a>
                    </div>
                    
                    <div class="text-center mb-3">
                        <span class="text-muted">or</span>
                    </div>
                    <% } else { %>
                    <div class="alert alert-info">
                        <small><i class="fas fa-info-circle me-1"></i>Google OAuth not configured. Please set up GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET in your environment variables.</small>
                    </div>
                    <% } %>
                    
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <small class="text-muted">Already have an account? <a href="/login" class="text-decoration-none">Login here</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
