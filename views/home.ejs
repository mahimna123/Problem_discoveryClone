<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/tailwind-output.css">

<!-- Hero Cards Section -->
<div class="hero-cards-section">
    <div class="container">
        <div class="max-w-[1200px] gap-8 grid grid-cols-1 md:grid-cols-3 px-8 mx-auto">
            <!-- Card 1: Problem Discovery -->
            <div class="heroui-card h-[400px]">
                <img
                    class="w-full h-full object-cover"
                    alt="Problem Discovery"
                    src="https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                />
                <div class="absolute inset-0 bg-black/20 flex items-center justify-center">
                    <a href="/problems" class="btn btn-success action-btn px-6 py-2">
                        <i class="fas fa-search me-2"></i>Browse Problem Statements
                    </a>
                </div>
            </div>
            
            <!-- Card 2: Team Collaboration -->
            <div class="heroui-card h-[400px]">
                <img
                    class="w-full h-full object-cover"
                    alt="Team Collaboration"
                    src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                />
                <div class="absolute inset-0 bg-black/20 flex items-center justify-center">
                    <a href="/register" class="btn btn-primary action-btn px-6 py-2">
                        <i class="fas fa-users me-2"></i>Register Your Team
                    </a>
                </div>
            </div>
            
            <!-- Card 3: Innovation Solutions -->
            <div class="heroui-card h-[400px]">
                <img
                    class="w-full h-full object-cover"
                    alt="Innovation Solutions"
                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                />
                <div class="absolute inset-0 bg-black/20 flex items-center justify-center">
                    <a href="/login" class="btn btn-warning action-btn px-6 py-2">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>